<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.FileChooser?>

<VBox fx:controller="controllers.CarFormController" spacing="10" xmlns:fx="http://javafx.com/fxml">
    <Label text="Car Details" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    
    <Label text="Make" />
    <TextField fx:id="makeField" />
    
    <Label text="Model" />
    <TextField fx:id="modelField" />
    
    <Label text="Year" />
    <TextField fx:id="yearField" />
    
    <Label text="Color" />
    <TextField fx:id="colorField" />
    
    <Label text="Mileage" />
    <TextField fx:id="mileageField" />
    
    <Label text="Price" />
    <TextField fx:id="priceField" />
    
    <Label text="Image" />
    <Button text="Select Image" onAction="#selectImage" />
    
    <Button text="Submit" onAction="#submitForm" />
</VBox>
