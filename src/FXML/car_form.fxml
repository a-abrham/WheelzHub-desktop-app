<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="587.0" prefWidth="454.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="controllers.CarFormController">
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Car Details" />
    
    <Label text="Make" />
    <TextField fx:id="makeField" />
    
    <Label text="Model" />
    <TextField fx:id="modelField" />
    
    <Label text="Year" />
    <TextField fx:id="yearField" />
    
    <Label text="Color" />
    <TextField fx:id="colorField" />
    
    <Label text="Mileage" />
    <TextField fx:id="mileageField" />
    
    <Label text="Price" />
    <TextField fx:id="priceField" />
    
    <Label text="Image" />
    <Button onAction="#selectImage" text="Select Image" />
    
    <Button onAction="#submitForm" text="Submit" />
</VBox>
